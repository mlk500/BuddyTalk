# ============================================
# Deployment Mode Configuration
# ============================================

# Set to 'false' for Vercel deployment (audio-only, no backend)
# Set to 'true' for local development (enables lip-sync video)
VITE_ENABLE_LIPSYNC=true

# ============================================
# Database Configuration (REQUIRED)
# ============================================

# Supabase Configuration - Get yours at https://supabase.com
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# LLM API Configuration
# ============================================

# OpenRouter API Key - Get yours at https://openrouter.ai/keys
# LOCAL MODE: Add key here (will be sent from browser)
# DEPLOYED MODE: Leave empty, add to Vercel as OPENROUTER_API_KEY
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Use paid models (optional, better quality)
# Default: Uses free models
VITE_OPENROUTER_USE_PAID=false

# ============================================
# Voice & Video APIs
# ============================================

# Fish Audio API Key - Get yours at https://fish.audio
# LOCAL MODE: Add key here
# DEPLOYED MODE: Leave empty, add to Vercel as FISH_AUDIO_API_KEY
VITE_FISH_AUDIO_API_KEY=your_fish_audio_api_key_here

# Wav2Lip Backend URL (LOCAL MODE ONLY)
# Only used when VITE_ENABLE_LIPSYNC=true
VITE_WAV2LIP_API_URL=http://localhost:8000
